    <array name="dataSetColor">
        <item>#FF0000FF</item>  <!-- blue -->
        <item>#FFFF0000</item>  <!-- red -->
        <item>#FF00FF00</item>  <!-- green -->
        <item>#FF000000</item>  <!-- black -->
        <item>#FF00FFFF</item>  <!-- cyan -->
        <item>#FFFF00FF</item>  <!-- pink -->
    </array>
    <string name="startPlotButton">Start Plot</string>

    <string name="xAxisLabel">Time (ms)</string>
    <string name="setPlotLength">Plot Length</string>

    <!-- size of the plot name -->
    <dimen name="plot_title_font_size">18dp</dimen>
    <dimen name="plot_margin_top">20dp</dimen>
    <dimen name="plot_margin_left">25dp</dimen>
    <dimen name="plot_margin_bottom">40dp</dimen>

    <dimen name="domain_label_font_size">15dp</dimen>
    <dimen name="range_label_font_size">15dp</dimen>

    <dimen name="legend_text_font_size">15dp</dimen>
    <!-- width for 10 char -> legendTextFontSize*10-->
    <dimen name="legend_box_width">150dp</dimen>

    <dimen name="legend_box_height">30dp</dimen>

    <dimen name="legend_box_padding">5dp</dimen>
    <dimen name="legend_icon_size">13dp</dimen>
    <dimen name="range_tick_label_font_size">10dp</dimen>
    <dimen name="domain_tick_label_font_size">10dp</dimen>

    <string name="selectMaxSamples">Select the time scale</string>
    <string-array name="availableMaxSamplesString">
        <item>1s</item>
        <item>5s</item>
        <item>10s</item>
        <item>30s</item>
    </string-array>
    <integer-array name="availableMaxSamplesValues">
        <item>1000</item>
        <item>5000</item>
        <item>10000</item>
        <item>30000</item>
    </integer-array>

