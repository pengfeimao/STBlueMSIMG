<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/memsSensorFusionRootLayout">
    <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="com.st.BlueMS.demos.util.HidableTextView" android:id="@+id/quaternionRateText"
          android:layout_alignParentTop="true" android:layout_alignParentStart="true" />

    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="com.st.BlueMS.demos.util.HidableTextView" android:id="@+id/renderingRateText"
          android:layout_alignParentTop="true" android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/CalibImgH"
        android:text="@string/ResetButton"
        android:id="@+id/resetButton"
        android:layout_alignTop="@+id/calibrationImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/proximityButton"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/CalibImgH"
        android:text="@string/enableProximityButton"
        android:id="@+id/proximityButton"
        android:textOff="@string/enableProximityButton"
        android:textOn="@string/enableProximityButton"
        android:visibility="invisible"
        android:layout_alignTop="@+id/calibrationImage"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" android:checked="true"/>


    <ImageButton
        android:layout_width="@dimen/CalibImgW"
        android:layout_height="@dimen/CalibImgH"
        android:id="@+id/calibrationImage"
        android:src="@drawable/uncalibrated"
        android:focusableInTouchMode="false" android:clickable="false"
        android:scaleType="fitCenter"
        android:contentDescription="@string/CalibButtonDesc" android:focusable="false"
        android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>

    <android.opengl.GLSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/glSurface"
        android:layout_below="@id/quaternionRateText" android:layout_alignParentStart="true"
        android:layout_above="@id/proximityButton"/>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>