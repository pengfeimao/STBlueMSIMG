<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fwUpgrade.FwUpgradeActivity"
    android:id="@+id/activityFwRootView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/fwName" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:text="@string/fwUpgrade_loading"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fwUpgrade_version"
            android:id="@+id/fwVersionBoardLabel"
            android:layout_below="@+id/fwName"
            android:layout_alignParentStart="true" android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fwUpgrade_board_type"
            android:id="@+id/boardTypeLabel"
            android:layout_below="@+id/fwVersionBoardLabel"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/fwVersionValue"
            android:singleLine="false"
            android:layout_toEndOf="@+id/fwVersionBoardLabel"
            android:layout_alignBaseline="@+id/fwVersionBoardLabel"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/boardTypeValue"
            android:singleLine="false"
            android:layout_toEndOf="@+id/boardTypeLabel"
            android:layout_alignBaseline="@+id/boardTypeLabel"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/upgradeFinishMessage" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>
    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/startUpgradeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_upload_license_white_24dp"/>

</android.support.design.widget.CoordinatorLayout>
